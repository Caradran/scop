#version 400

in vec3 our_color;
in vec3 UV;

out vec4 frag_color;

uniform sampler2D texture1;
uniform sampler2D texture2;
uniform float alpha;


void main()
{
	frag_color = vec4(our_color, 1.0f);
	if (UV.z == 0.0)
		frag_color = frag_color * (1 - alpha) + alpha * texture(texture1, vec2(UV));
	else
		frag_color = frag_color * (1 - alpha) + alpha * texture(texture2, vec2(UV));
}